<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:id="signupPage"
          xmlns="http://javafx.com/javafx"
          fx:controller="controllers.SignUpController"
          prefHeight="400.0" prefWidth="600.0">

    <Label text="Nome:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="nameField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Cognome:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="surnameField"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Indirizzo:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="addressField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="CAP:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="zipField"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Numero di telefono:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

    <TextField fx:id="phoneNumberField"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Email:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <TextField fx:id="emailField"
               GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="7"/>

    <TextField fx:id="passwordField"
               GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Conferma password:"
           GridPane.columnIndex="0" GridPane.rowIndex="8"/>

    <TextField fx:id="confirmPasswordField"
               GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label text="Metodo di pagamento:"
           GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <RadioButton fx:id="creditCardRadio" text="Carta di credito"
                 GridPane.columnIndex="1" GridPane.rowIndex="9">
        <HBox.margin>
            <Insets right="3.0"/>
        </HBox.margin>
        <toggleGroup>
            <ToggleGroup fx:id="paymentMethodGroup"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="paypalRadio" text="PayPal"
                 GridPane.columnIndex="1" GridPane.rowIndex="10">
        <HBox.margin>
            <Insets right="30.0"/>
            <Insets bottom="10.0"/>
        </HBox.margin>
        <toggleGroup>
            <fx:reference source="paymentMethodGroup"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="cashRadio" text="Alla consegna"
                 GridPane.columnIndex="1" GridPane.rowIndex="11">
        <HBox.margin>
            <Insets right="30.0"/>
            <Insets bottom="10.0"/>
        </HBox.margin>
        <toggleGroup>
            <fx:reference source="paymentMethodGroup"/>
        </toggleGroup>
    </RadioButton>

    <HBox
            spacing="10" alignment="bottom_right"
            GridPane.columnIndex="0" GridPane.rowIndex="12">
        <Button text="Indietro" fx:id="backButton"
                onAction="#backToLogin"/>
    </HBox>
    <HBox
            spacing="10" alignment="bottom_right"
            GridPane.columnIndex="1" GridPane.rowIndex="12">
        <Button text="Registrati" fx:id="signUpButton"
                onAction="#signUp"/>
    </HBox>
    <Text fx:id="actionTarget"
          GridPane.columnIndex="1" GridPane.rowIndex="13"/>

</GridPane>
